<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Memofy.Views.Components.CreatePersonView"
             IsVisible="False"
             BackgroundColor="#80000000">
    <ContentView.GestureRecognizers>
        <TapGestureRecognizer Tapped="Close"/>
    </ContentView.GestureRecognizers>
    <Grid>
        <!-- DialogBox -->
        <Frame 
            x:Name="DialogBox"
            BackgroundColor="White"
            CornerRadius="20"
            Margin="5"
            Padding="20"
            Opacity="0"
            Scale="0.8"
            VerticalOptions="Center">
            <VerticalStackLayout Padding="10,0" Spacing="25">
                <Grid Padding="20" RowSpacing="10" ColumnSpacing="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Név beviteli mező -->
                    <Label Text="Név" Grid.Row="0" Grid.Column="0" VerticalTextAlignment="Center" />
                    <Entry Placeholder="Írd be a nevet" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" />

                    <!-- Születésnap -->
                    <Label Text="Születésnap" Grid.Row="2" Grid.Column="0" VerticalTextAlignment="Center" />
                    <Picker Title="Hónap"
                            ItemsSource="{Binding Months}"
                            SelectedItem="{Binding BirthMonth}"
                            ItemDisplayBinding="{Binding Name}"
                            Grid.Row="3"
                            Grid.Column="0" />
                    <Picker Title="Nap"
                            ItemsSource="{Binding BirthDays}"
                            SelectedItem="{Binding BirthDay}"
                            Grid.Row="3"
                            Grid.Column="1" />

                    <!-- Switch a névnap engedélyezéséhez -->
                    <Label Text="Névnap megadása" VerticalOptions="Center" Grid.Row="4">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnNamedayLabelTapped"/>
                        </Label.GestureRecognizers>
                    </Label>
                    <Switch x:Name="NamedaySwitch" IsToggled="{Binding IsNamedayEnabled}" Grid.Row="4" Grid.Column="1"/>

                    <!-- Névnap -->
                    <StackLayout Grid.Row="5" Grid.ColumnSpan="2"
                                 IsVisible="{Binding IsNamedayEnabled}"
                                 Spacing="10">
                        <Label Text="Névnap" VerticalTextAlignment="Center" />
                        <Grid ColumnSpacing="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Picker Title="Hónap"
                                    ItemsSource="{Binding Months}"
                                    SelectedItem="{Binding NamedayMonth}"
                                    ItemDisplayBinding="{Binding Name}"
                                    Grid.Column="0" />
                            <Picker Title="Nap"
                                    ItemsSource="{Binding NameDays}"
                                    SelectedItem="{Binding NamedayDay}"
                                    Grid.Column="1" />
                        </Grid>
                    </StackLayout>
                </Grid>
                <Button Text="Mentés" CornerRadius="35" Margin="30,0,30,0" />
                <Button Text="Mégse" BackgroundColor="Gray" CornerRadius="35" Margin="30,-15,30,0" Clicked="Close"/>
            </VerticalStackLayout>
        </Frame>
    </Grid>
</ContentView>
