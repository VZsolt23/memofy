<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Memofy.MainPage"
             Title="Memofy"
             BackgroundColor="#23ada3"
             Shell.BackgroundColor="#23ada3"
             Shell.TitleColor="Wheat"
             Shell.ForegroundColor="Wheat">

    <ScrollView>
        <Border StrokeThickness="0"
                BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#141414}"
                HorizontalOptions="Fill"
                VerticalOptions="Fill"
                StrokeShape="RoundRectangle 25,25,0,0"
                Padding="5"
                Margin="0,5,0,0">
            <VerticalStackLayout
                Padding="10,0"
                Spacing="15">
                <Frame
                    CornerRadius="12"
                    Padding="16"
                    Margin="16"
                    BackgroundColor="#23ada3"
                    HasShadow="True">
                    <Grid ColumnDefinitions="*, Auto" 
                          VerticalOptions="Center">
                        <!-- Bal oldal: szövegek -->
                        <StackLayout Grid.Column="0" Spacing="4">
                            <Label Text="Következő esemény"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="Wheat"/>

                            <Label Text="Holnap"
                                   FontSize="20"
                                   Margin="0,10,0,0"
                                   FontAttributes="Bold"
                                   TextColor="Wheat"/>

                            <Label Text="Name születésnapja"
                                   FontSize="18"
                                   TextColor="Wheat"/>
                        </StackLayout>

                        <!-- Jobb oldal: kép -->
                        <Image Grid.Column="1"
                               Source="cake.gif"
                               HeightRequest="90"
                               Aspect="AspectFit"
                               IsAnimationPlaying="True"
                               HorizontalOptions="End"
                               VerticalOptions="Center"/>
                    </Grid>
                </Frame>

                <Label Text="Közelgő események"
                       FontSize="20"
                       FontAttributes="Bold"/>

                <CollectionView HorizontalOptions="Start">
                    <CollectionView.ItemsSource>
                        <x:Array Type="{x:Type x:String}">
                            <x:String>Első</x:String>
                            <x:String>Második</x:String>
                            <x:String>Harmadik</x:String>
                            <x:String>Negyedik</x:String>
                            <x:String>Ötödik</x:String>
                        </x:Array>
                    </CollectionView.ItemsSource>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="0,5">
                                <Frame>
                                    <Grid RowDefinitions="*"
                                          ColumnDefinitions="Auto,*">
                                        <VerticalStackLayout>
                                            <Label Text="{Binding .}"
                                               FontAttributes="Bold"
                                               FontSize="18"/>
                                            <Label Text="Születésnap"
                                               FontSize="14"
                                               TextColor="Gray"/>
                                        </VerticalStackLayout>
                                        <Label Text="Május 10"
                                               VerticalTextAlignment="Center"
                                               HorizontalTextAlignment="End"
                                               Grid.Row="1"
                                               Grid.Column="1"/>
                                    </Grid>
                                </Frame>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </Border>
    </ScrollView>
</ContentPage>
